@page
@model BestFilmsRazorPages.Pages.DetailsModel

@{
    ViewData["Title"] = "Информация о фильме";
}

<div class="b1 ">
    <a asp-page="./Index" class="c2">Вернуться к списку фильмов</a>
</div>
<h1 class="h h2">О фильме</h1>

<div class="container">
    <div class="img"><img src=@Url.Content( Model.Film.Photo ) width="150" height="200"> </div>
    <div>


        <h3 class="col-sm-10 h">
            @Html.DisplayFor(model => model.Film.Name)
        </h3>
        <br />
        <div class="col-sm-10 h">
            @Html.DisplayFor(model => model.Film.Genre)
        </div>
        <br />
        <div class="col-sm-10 h">
            @Html.DisplayFor(model => model.Film.Director)
        </div>
        <br />
        <div class="col-sm-10 h">
            @Html.DisplayFor(model => model.Film.Year)
        </div>
        <br />
    </div>
</div>
<div class="container">
    <div class=" h2">
        @Html.DisplayFor(model => model.Film.Story)
    </div>
</div>
